<p id="notice"><%= notice %></p>

<h1><%= @list.title %></h1>
<%= link_to 'Edit List', edit_list_path(@list) %>
<%= link_to 'Destroy List', @list, method: :delete, data: { confirm: 'Are you sure?' } %>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Purchased</th>
      <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.url %></td>
        <td><%= item.purchased %></td>
        <td><%= item.list.title %></td>
        <td><%= link_to 'Edit Item', edit_list_item_path(@list, item) %></td>
        <td><%= link_to 'Destroy Item', [@list, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_list_item_path(@list) %>
